<Window x:Class="BudgetUpdater.DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="BudzetDomowy" Height="760" Width="1120"
        Background="#121219" Foreground="#e6e6f0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="220"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" >
            <Button x:Name="BtnChooseCsv" Width="160" Margin="4" Click="BtnChooseCsv_Click" Padding="6">Wybierz plik CSV</Button>
            <TextBlock x:Name="TxtCsvPath" VerticalAlignment="Center" Margin="6,0" TextWrapping="NoWrap" Width="300" Foreground="#cfcff0"/>
            <Button x:Name="BtnChooseExcel" Width="200" Margin="4" Click="BtnChooseExcel_Click" Padding="6">Wybierz plik bud≈ºetu Excel</Button>
            <TextBlock x:Name="TxtExcelPath" VerticalAlignment="Center" Margin="6,0" TextWrapping="NoWrap" Width="300" Foreground="#cfcff0"/>
            <Button x:Name="BtnLoad" Width="140" Margin="16,0" Click="BtnLoad_Click" Padding="6">Wczytaj transakcje</Button>
            <Button x:Name="BtnUpdate" Width="160" Margin="4,0" Click="BtnUpdate_Click" Padding="6">Aktualizuj budzet</Button>
        </StackPanel>

        <Border Grid.Row="1" Margin="10" Background="#0f0f14" CornerRadius="8">
            <wv2:WebView2 x:Name="WebView" />
        </Border>

        <TextBox x:Name="LogBox" Grid.Row="2" Margin="10" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"
                 Background="#0b0b10" Foreground="#d7d7e8" FontFamily="Consolas" FontSize="12" BorderThickness="1" BorderBrush="#222233"/>
    </Grid>
</Window>
